{
  "name": "puppeye",
  "version": "1.0.0",
  "description": "UI testing with eyes. ðŸ‘€",
  "license": "MIT",
  "keywords": [
    "puppeteer",
    "test",
    "testing",
    "human",
    "user",
    "vision",
    "eye"
  ],
  "author": "Ivan Babak <babak.john@gmail.com>",
  "main": "lib/index.js",
  "scripts": {
    "test": "yarn clean && jest --forceExit",
    "test:watch": "yarn clean && jest -o --watch",
    "test:debug": "yarn clean && WITH_DEBUG_OVERLAYS=1 WITH_DEBUG_DELAYS=1 jest --forceExit",
    "build": "tsc",
    "clean": "rimraf ./lib ./screenshot-*"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "<rootDir>/test/**/*.(test|spec).(js|ts)?(x)"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "ts-jest"
    },
    "moduleDirectories": [
      "./node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "globalSetup": "./jest/globalSetup.js",
    "globalTeardown": "./jest/globalTeardown.js",
    "testEnvironment": "./jest/testEnvironment.js",
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  },
  "devDependencies": {
    "prettier": "^1.10.2"
  },
  "dependencies": {
    "@types/debug": "^0.0.30",
    "@types/faker": "^4.1.2",
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.0",
    "@types/puppeteer": "^1.0.0",
    "debug": "^3.1.0",
    "faker": "^4.1.0",
    "jest": "^22.2.1",
    "jest-environment-node": "^22.1.4",
    "mkdirp": "^0.5.1",
    "prettier": "^1.10.2",
    "puppeteer": "^1.0.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.3",
    "typescript": "^2.7.1",
    "unhandled-rejection": "^1.0.0"
  }
}
